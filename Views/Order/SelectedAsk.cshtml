
@{
    ViewData["Title"] = "SelectedAsk";
	Layout = "_PageWithNavLayout";
}

<h1 style="width:500px;margin:0 auto;margin-top:40px">@ViewData["serviceType"]</h1>
@model Order

<form method="post" asp-action="AskService" asp-controller="Order" style="width:40%; margin:0 auto;">
	<div>
		<label asp-for="PosterName">Enter Your Name</label>
		<input asp-for="PosterName" class="form-control" />
		<span asp-validation-for="PosterName" class="text-danger" />

	</div>
	<div>

		<label asp-for="Phone">Enter Your Phone Number</label>
		<input asp-for="Phone" class="form-control" />
		<span asp-validation-for="Phone" class="text-danger" />

	</div>

	<div>
		<label asp-for="Address">Enter Your Address</label>
		<input asp-for="Address" class="form-control" />
		<span asp-validation-for="Address" class="text-danger" />

	</div>
	<div>
		<label asp-for="mail">Enter Your mail</label>
		<input asp-for="mail" class="form-control" />
		<span asp-validation-for="mail" class="text-danger" />

	</div>
	<div>
		<input asp-for="ServiceType" type="hidden" value="@ViewBag.serviceType" />
	</div>
	<div>
		<input asp-for="UserName" type="hidden" value="@User.Identity.Name" class="form-control" />

	</div>

	<br />
	<input type="submit" class="btn btn-primary" value="Ask" />
	<a href="/Task/ShowAllServices" class="btn btn-primary">Cancel</a>

</form>
@section scripts{
	<script src="~/lib//jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

