@model Final_Project.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_PageWithNavLayout";
   

}

<section class="vh-100 gradient-custom" >
    <div class="container py-5 h-100" style="max-height:200px">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your login and password!</p>
                            <form asp-action="Login">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-outline form-white mb-4">
                                    <label for="UserName" style="font-family:'Arial Rounded MT'; font-size:19px">User Name</label>
                                    <br />
                                    <input asp-for="UserName" class="form-control form-control-lg" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-outline form-white mb-4">
                                    <label class="form-label" for="Password" style="font-family:'Arial Rounded MT'; font-size:19px">Password</label>
                                    <br />

                                    <input asp-for="Password" class="form-control form-control-lg" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                                    </label>
                                </div>
                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
                            </form>
                        </div>
                        <div>
                            <p class="mb-0">Don't have an account? <a href="/Account/Register" class="text-white-50 fw-bold">Sign Up</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}