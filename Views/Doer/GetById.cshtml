
@{
    ViewData["Title"] = "GetById";
	Layout = "_PageWithNavLayout";
}



@model TaskDoer


<div class="card" style="width:500px;margin:0 auto;">
	<img class="card-img-top" src="/Doers/@Model.Image" alt="Card image">
	<div class="card-body">
		<h4 class="card-title">@Model.Name</h4>
		<hr />
		<p class="card-text">Featured Skills: @Model.Service</p>
		<p class="card-text">Phone: @Model.phone</p>

		<p class="card-text">Email: @Model.Email</p>

		<p class="card-text">Salary Per Hour: @Model.SalaryPerHour L.E</p>
		<hr />
		<p class="card-text">@Model.Description</p>


		<a href="/Order/SelectedAsk?seviceType=@Model.Service" class="btn btn-primary">Connect</a>
		<a href="/Doer/GetAll" class="btn btn-primary">Back</a>

	</div>
</div>

