@using Task = Final_Project.Models.Task;
@model List<Task>

@{
    ViewData["Title"] = "Index";
    Layout = "_Main";
}

<h4>Popular services in your area</h4>
<br />


@foreach (var item in Model)
{

    <div class="col-lg-4 col-sm-6 mb-4">
        <!-- Portfolio item 1-->
        <div class="portfolio-item">
            <a class="portfolio-link" data-bs-toggle="modal">

                <div class="image-container">
                    <a href="/Task/Details/@item.Id"><img class="portfolio-hover img-fluid" src="/images/@item.Image" alt="..." style="width:350px;height:250px;" /></a>
                </div>
            </a>

            <div class="portfolio-caption">
                <div class="portfolio-caption-heading">@item.Title</div>
                <div class="portfolio-caption-subheading text-muted">Average per service: @item.MinimumAmount $</div>
            </div>
        </div>
    </div>
}
<div style="width:300px;margin: 0 auto;">

    <a href="/Task/ShowAllServices" class="btn btn-primary btn-xl text-uppercase">View All Services</a>
</div>





